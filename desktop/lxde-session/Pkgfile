name=lxde-session
_name=lxsession
version=0.5.2
release=1

source=(http://downloads.sourceforge.net/lxde/${_name}-$version.tar.xz)


build() {
cd ${_name}-$version
./configure --prefix=/usr --disable-man
make
make DESTDIR=$PKG install
}
  
