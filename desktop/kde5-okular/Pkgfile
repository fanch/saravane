version=4.14.1-201-g98eb283 

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/okular-$version.tar.xz)

build() {
cd okular-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr        \
      -DCMAKE_BUILD_TYPE=Release         \
      -DLIB_INSTALL_DIR=lib              \
      -DBUILD_TESTING=OFF                \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      ..
make
make DESTDIR=$PKG install
}
