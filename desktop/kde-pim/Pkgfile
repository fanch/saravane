# Description: KDE programs for managing personal information.
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: kde-pim-runtime kde-pimlibs boost libassuan grantlee kde-baloo 


_name=kdepim

name=kde-pim
version=4.14.8
release=1

source=(http://download.kde.org/stable/applications/15.04.1/src/${_name}-$version.tar.xz)

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DSYSCONF_INSTALL_DIR=/etc/kde \
	      -DCMAKE_BUILD_TYPE=Release \
	      ..
	make 
	make DESTDIR=$PKG install
}
