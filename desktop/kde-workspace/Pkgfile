# Description: Components that are central to providing the KDE desktop environment. Of particular importance are KWin, the KDE window manager, and Plasma, which provides the workspace interface. 
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: kde-activities qimageblitz xcb-util-image xcb-util-renderutil libxcb xcb-proto xcb-util xcb-util-keysyms xcb-util-wm kde-pimlibs boost freetype pciutils consolekit libusb libusb-compat networkmanager lm-sensors qjson xorg-libx11 xorg-xkeyboard-config 

name=kde-workspace
version=4.14.34.11.14
release=1

source=(http://download.kde.org/stable/4.14.3/src/$name-$version.tar.xz
        kde-workspace.pam
        kde-workspace.kde-np.pam
        kde-workspace.kscreensaver.pam)

build() {
cd $name-$version
mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr           \
      -DSYSCONF_INSTALL_DIR=/etc/kde               \
      -DCMAKE_BUILD_TYPE=Release                   \
      -DINSTALL_PYTHON_FILES_IN_PYTHON_PREFIX=TRUE \
      -DWITH_NepomukCore=OFF                       \
      -DWITH_Soprano=OFF                           \
      -Wno-dev .. 
make
make DESTDIR=$PKG install

cd ..
sed -i "s/AllowRootLogin=false/AllowRootLogin=true/" $PKG/usr/share/config/kdm/kdmrc
sed -i "s/#Language=de_DE/Language=fr_FR/" $PKG/usr/share/config/kdm/kdmrc

chown -R root:root $PKG
mkdir -p $PKG/var/lib/kdm
chown -R kdm:kdm $PKG/var/lib/kdm

# Necessaire pour demarrer avec kdm
install -D -m644 $SRC/kde-workspace.pam $PKG/etc/pam.d/kde
install -D -m644 $SRC/kde-workspace.kde-np.pam $PKG/etc/pam.d/kde-np
install -D -m644 $SRC/kde-workspace.kscreensaver.pam $PKG/etc/pam.d/kscreensaver
}
