version=3.20
source=(http://www.cpan.org/authors/id/P/PE/PETDANCE/HTML-Tagset-$version.tar.gz)

build() {
cd HTML-Tagset-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}
